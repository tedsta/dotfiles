set nocompatible              " be iMproved, required
filetype off                  " required

" Leader key
let mapleader=","

" tabs!!
set expandtab           " enter spaces when tab is pressed
set tabstop=4           " use 4 spaces to represent tab
set softtabstop=4
set shiftwidth=4        " number of spaces to use for auto indent
set autoindent          " copy indent from current line when starting a new

" Bindings to test/run python projects
au BufRead *.py nnoremap <Leader>t :!python all_tests.py<CR>
au BufRead *.py nnoremap <Leader>r :!python main.py<CR>
